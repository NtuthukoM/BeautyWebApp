@model BeautyWebApp.ViewModels.PromotionVM

@{
    ViewBag.Title = "Promotion Details";
}

@section Heading {
    <div class="page-title" style="background-image: url(/content/images/page-title.png)">
        <h1>@ViewBag.Title</h1>
    </div>
}

<section>
    <div>
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Duration)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duration)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Venue)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Venue)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PromotionType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PromotionType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cost)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PromotionDate)
            </dt>

            <dd>                
                @Model.PromotionDate.Value.ToShortDateString()
            </dd>

        </dl>
        <h2>Attendees</h2>
        @if (Model.Attendees != null && Model.Attendees.Count > 0)
        {
            <div>
                <table class="table">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Email
                        </th>

                    </tr>

                    @foreach (var item in Model.Attendees)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                        </tr>
                    }

                </table>

            </div>
        }
        else
        {
            <p>
                No attendees have registered.
            </p>
        }

    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</section>
